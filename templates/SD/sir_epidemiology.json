{
  "template_info": {
    "template_id": "sir-epidemiology-v1",
    "name": "SIR Epidemiology Model",
    "description": "Classic Susceptible-Infected-Recovered disease spread model with infection and recovery rates",
    "domain": "epidemiology",
    "complexity": "intermediate",
    "schema_type": "SD",
    "author": "Public Health Team",
    "version": "1.0.0",
    "created": "2025-09-21",
    "tags": ["epidemiology", "disease", "population", "infection", "compartmental"],
    "estimated_build_time": "20-25 minutes",
    "difficulty": "intermediate"
  },
  "model": {
    "abstractModel": {
      "originalPath": "sir_epidemiology.json",
      "sections": [
        {
          "name": "__main__",
          "type": "main",
          "path": "/",
          "params": [],
          "returns": [],
          "subscripts": [],
          "constraints": [],
          "testInputs": [],
          "split": false,
          "viewsDict": {},
          "elements": [
            {
              "name": "Epidemic Dynamics",
              "components": [
                {
                  "type": "Stock",
                  "subtype": "Normal",
                  "name": "susceptible",
                  "subscripts": [],
                  "ast": {
                    "kind": "INTEG",
                    "expression": "INTEG(-infection_rate, 10000)"
                  }
                },
                {
                  "type": "Stock",
                  "subtype": "Normal",
                  "name": "infected",
                  "subscripts": [],
                  "ast": {
                    "kind": "INTEG",
                    "expression": "INTEG(infection_rate - recovery_rate, 100)"
                  }
                },
                {
                  "type": "Stock",
                  "subtype": "Normal",
                  "name": "recovered",
                  "subscripts": [],
                  "ast": {
                    "kind": "INTEG",
                    "expression": "INTEG(recovery_rate, 0)"
                  }
                },
                {
                  "type": "Flow",
                  "subtype": "Normal",
                  "name": "infection_rate",
                  "subscripts": [],
                  "ast": {
                    "kind": "EQUATION",
                    "expression": "susceptible * infected * contact_rate * infectivity / total_population"
                  }
                },
                {
                  "type": "Flow",
                  "subtype": "Normal",
                  "name": "recovery_rate",
                  "subscripts": [],
                  "ast": {
                    "kind": "EQUATION",
                    "expression": "infected / recovery_time"
                  }
                },
                {
                  "type": "Auxiliary",
                  "subtype": "Normal",
                  "name": "total_population",
                  "subscripts": [],
                  "ast": {
                    "kind": "EQUATION",
                    "expression": "susceptible + infected + recovered"
                  }
                },
                {
                  "type": "Auxiliary",
                  "subtype": "Normal",
                  "name": "contact_rate",
                  "subscripts": [],
                  "ast": {
                    "kind": "CONSTANT",
                    "expression": "5"
                  }
                },
                {
                  "type": "Auxiliary",
                  "subtype": "Normal",
                  "name": "infectivity",
                  "subscripts": [],
                  "ast": {
                    "kind": "CONSTANT",
                    "expression": "0.3"
                  }
                },
                {
                  "type": "Auxiliary",
                  "subtype": "Normal",
                  "name": "recovery_time",
                  "subscripts": [],
                  "ast": {
                    "kind": "CONSTANT",
                    "expression": "14"
                  }
                },
                {
                  "type": "Auxiliary",
                  "subtype": "Normal",
                  "name": "reproduction_number",
                  "subscripts": [],
                  "ast": {
                    "kind": "EQUATION",
                    "expression": "contact_rate * infectivity * recovery_time"
                  }
                }
              ]
            }
          ]
        }
      ]
    }
  },
  "usage_notes": "Classic epidemiological model for understanding disease spread dynamics. This SIR model tracks the flow of individuals through Susceptible, Infected, and Recovered compartments. Essential for public health modeling, policy analysis, and understanding epidemic curves.",
  "customization_tips": [
